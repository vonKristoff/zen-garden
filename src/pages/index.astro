---
import BaseHead from "$lib/layout/BaseHead.astro";
import Footer from "$lib/layout/Footer.astro";
import Header from "$lib/layout/Header.astro";
import VideoHero from "$lib/components/VideoHero/index";
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import ids from "../manifest.json";
---

<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <div class="hero h-[100dvh]">
      <VideoHero title={SITE_TITLE} ids={ids} client:load />
    </div>
    <Footer />
  </body>
</html>
