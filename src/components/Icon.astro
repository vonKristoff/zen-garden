---
interface Props {
  ctx?: string;
  size?: string;
  weight?: string;
  colour?: string;
  src?: string;
  type?: "both" | "fill" | "stroke";
}
const {
  ctx,
  weight = "2",
  size = "1",
  colour = "currentColor",
  src = "sprites",
  type = "both",
} = Astro.props;
const href = `/${src}.svg#icon-${ctx}`;
---

<svg
  width={`${size}em`}
  height={`${size}em`}
  fill={type === "both" ? colour : type === "fill" ? colour : "none"}
  stroke={type === "both" ? colour : type === "stroke" ? colour : "none"}
  stroke-width={weight}
  stroke-linecap="round"
  stroke-linejoin="round"
>
  <use {href}></use>
</svg>

<style>
  i {
    width: fit-content;
  }
  i svg {
    width: 100%;
    height: 100%;
  }
  svg path {
    fill: currentColor !important;
  }
</style>
